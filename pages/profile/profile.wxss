/* pages/profile/profile.wxss */
.login-wrapper {
    height: 400rpx;
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
}

.login-wrapper image {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.login-wrapper .login {
    color: #1E4826;
    background-color: #ffffff;
    width: 350rpx;
    height: 80rpx;
    font-size: 40rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 30rpx;
    /* box-shadow: 往右 往下 模糊半径 延伸距离 color阴影颜色 inset外框阴影变内框阴影 */
    box-shadow: 2rpx 2rpx 2rpx 0 rgba(0, 0, 0, 0.1);
}

.version {
    position: absolute;
    bottom: 30rpx;
    color: #C9C9C9;
    font-size: 24rpx;
    width: 100%;
    text-align: center;
}

.item-wrapper {
    margin-top: 30rpx;
    font-size: 28rpx;
}

.item-wrapper .arrow {
    width: 20rpx;
    height: 20rpx;
    /* 箭头的代码写法 */
    border-right: 4rpx solid #7F7F7F;
    border-bottom: 4rpx solid #7F7F7F;
    transform: rotate(-45deg);
    margin-left: 10rpx;
}

.title-wrapper {
    padding: 0 40rpx 0 40rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.title-wrapper .title {
    font-weight: bold;
    font-size: 36rpx;
}

.title-wrapper .view {
    display: flex;
    align-items: center;
    color: #838383;
    font-size: 28rpx;
}

.item {
    display: flex;
    align-items: center;
    padding: 0 20rpx 20rpx 30rpx;
}

.item .icon {
    width: 80rpx;
    height: 80rpx;
    margin-right: 30rpx;
}

.info-wrapper {
    /* width: 100%; */
    /* flex-grow: 1; */
    flex: 1;
    margin-right: 20rpx;
}

.info-wrapper .info {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.info .left .top {
    margin-bottom: 15rpx;
    font-size: 32rpx;
}

.info .left .bottom {
    display: flex;
    color: #818181;
    align-items: flex-end;
}

.info .count {
    font-size: 60rpx;
    font-weight: bold;
    margin-right: 10rpx;
}

.info .bottom .text {
    margin-bottom: 10rpx;
}

.info .right {
    display: flex;
    align-items: center;
}

.info .right .text {
    color: #C1C1C1;
    margin-right: 10rpx;
}

.info .right .begin {
    color: #4a4a4a;
    background-color: #f5f5f5;
    padding: 10rpx 15rpx;
    border-radius: 10rpx;
}

.item .divider {
    width: 100%;
    height: 2rpx;
    background-color: rgba(0, 0, 0, 0.1);
    margin-top: 15rpx;
}